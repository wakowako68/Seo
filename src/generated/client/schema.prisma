// Forces cache invalidation
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuditReport {
  id                String   @id @default(cuid())
  url               String
  title             String?
  description       String?
  authorityScore    Int
  verdict           String
  executiveSummary  String
  fullAnalysis      String   // JSON string of the Gemini response
  createdAt         DateTime @default(now())
}
