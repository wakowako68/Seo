generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuditReport {
  id                String   @id @default(cuid())
  url               String
  title             String?
  description       String?
  authorityScore    Int
  verdict           String
  executiveSummary  String
  fullAnalysis      String   // JSON string of the Gemini response
  createdAt         DateTime @default(now())
}
